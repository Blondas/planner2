<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <servlet>
        <servlet-name>PlannerService</servlet-name>
        <servlet-class>pl.edu.agh.planner.server.PlannerServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PlannerService</servlet-name>
        <url-pattern>/Planner/PlannerService</url-pattern>
    </servlet-mapping>



    <!-- Spring classical web application context declaration -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:applicationContext.xml</param-value>
        <!--<param-value>-->
            <!--classpath:daoContext.xml-->
            <!--classpath:serviceContext.xml-->
            <!--classpath:controllerContext.xml-->
        <!--</param-value>-->
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <!-- Spring MVC Servlet declaration -->
    <servlet>
        <servlet-name>springMVCServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <!--<param-value>classpath:jsonMvc.xml</param-value>-->
            <param-value>
                classpath:jsonMvc.xml
                classpath:daoContext.xml
                classpath:serviceContext.xml
                classpath:controllerContext.xml
            </param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!--&lt;!&ndash; Spring MVC Servlet mapping &ndash;&gt;-->
    <!--<servlet-mapping>-->
        <!--<servlet-name>springMVCServlet</servlet-name>-->
        <!--&lt;!&ndash;<url-pattern>*.json</url-pattern>&ndash;&gt;-->
        <!--<url-pattern>/rest/*</url-pattern>-->
    <!--</servlet-mapping>-->



</web-app>
