<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

    <servlet>
        <servlet-name>PlannerService</servlet-name>
        <servlet-class>pl.edu.agh.planner.server.PlannerServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PlannerService</servlet-name>
        <url-pattern>/Planner/PlannerService</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            classpath:daoContext.xml
            classpath:serviceContext.xml
            classpath:controllerContext.xml
            classpath:applicationContext.xml
        </param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>


</web-app>
