<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:postgresql://localhost/dupa</property>
        <property name="connection.driver_class">org.postgresql.Driver</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">password</property>

         <property name="hbm2ddl.auto">create-drop</property> 
        
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL9Dialect</property>
        <property name="show_sql">true</property>

        <mapping class="pl.edu.agh.planner.hibernate.entity.AppUser"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.ConcreteDate"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.TemplateOfConcreteDate"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.SetOfTerms"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.Lesson"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.Aggregate"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.LessonSchedule"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.Avatar"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.CurriculumUnit"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.StudentGroup"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.ConductorOfClass"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.Sale"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.SaleHour"/>

        <mapping class="pl.edu.agh.planner.hibernate.entity.general.Authorization"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.general.User"/>

        <mapping class="pl.edu.agh.planner.hibernate.entity.dictionary.Dictionary"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.dictionary.DictionaryName"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.dictionary.DictionaryLetterDesignation"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.dictionary.DictionaryFieldOfStudy"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.dictionary.DictionaryFaculty"/>
        <mapping class="pl.edu.agh.planner.hibernate.entity.dictionary.DictionaryAuthorisationType"/>

    </session-factory>
</hibernate-configuration>